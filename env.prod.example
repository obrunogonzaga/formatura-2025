# Postgres (ajuste para o host gerenciado pelo Coolify)
DATABASE_URL=postgresql://formatura:${POSTGRES_PASSWORD}@db:5432/formatura

# MinIO / S3 (apontando para o serviço interno)
S3_ENDPOINT=http://minio:9000
# Caso o endpoint público seja diferente (domain público do Coolify)
S3_PUBLIC_ENDPOINT=https://minio.seu-dominio.com
# Endpoint usado para assinar URLs (use o host público)
S3_PRESIGN_ENDPOINT=https://minio.seu-dominio.com
S3_BUCKET=form-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=${MINIO_ROOT_USER}
S3_SECRET_KEY=${MINIO_ROOT_PASSWORD}
S3_FORCE_PATH_STYLE=true

# Frontend
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10

